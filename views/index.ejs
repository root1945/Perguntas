<%- include ('partials/header.ejs') %>
<body>
  <%- include ('partials/navbar.ejs') %>
  
  <div class="container">
    <hr>
    <h1> Charadas </h1>
    <a href="/charada" class="btn btn-success">Ir</a>
    <br>
    <hr>
    <% questions.forEach(question => { %>
      <br>
      <div class="card">
        <div class="card-body">
          <h3><p><%= question.title %></p></h3>
        </div>
        <div class="card-footer">
          <a href="/charada/<%= question.id %>"><button class="btn btn-success">Responder</button></a>
        </div>
      </div>
    <% }) %>
  </div>

</body>
